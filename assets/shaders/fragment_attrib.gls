#extension GL_NV_shader_framebuffer_fetch : enable

precision mediump float;

varying vec2 v_texture;
uniform sampler2D s_texture;

uniform bool u_use_color;
uniform bool u_use_texture;
uniform vec4 u_solid_color;
uniform vec4 u_texture_multipler;
uniform vec4 u_texture_fade;

void main() {
  vec4 v_tex;
  if(u_use_color){
    v_tex = u_solid_color;
  }else{
    v_tex = texture2D(s_texture, v_texture) * u_texture_multipler - u_texture_fade;
  }
  gl_FragColor = v_tex;
}
